redex -- reducible expression

call-by-value -- strict
call-by-name -- lazy

currying
	f v w
	(lambda y.[x -> v] s) w)
	[y -> w][x -> v] s

pair = lambda f . lambda s . lambda b . b f s
fst = lambda p . p tru;
snd = lambda p . p fls;

combinators -- closed term; no free variable

variable capture -- free variable in a term becomes a bound variable
alpha-conversion -- rename bound variables in lambda bound terms
